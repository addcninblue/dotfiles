mode "HDMI_brightness" {	
	bindsym XF86MonBrightnessUp exec xrandr --output HDMI-1 --brightness 1 # increase screen brightness
	bindsym XF86MonBrightnessDown exec xrandr --output HDMI-1 --brightness 0.5 # decrease screen brightness

	bindsym Escape mode "default"
}

