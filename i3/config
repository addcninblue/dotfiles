#VGA screen brightness
bindsym $mod+b mode "VGA_brightness"
mode "VGA_brightness" {	
	bindsym XF86MonBrightnessUp exec xrandr --output VGA1 --brightness 1 # increase screen brightness
	bindsym XF86MonBrightnessDown exec xrandr --output VGA1 --brightness 0.5 # decrease screen brightness

	bindsym Escape mode "default"
}

