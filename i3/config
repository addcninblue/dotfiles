#VGA screen brightness
bindsym $mod+b mode "VGA_brightness"
mode "VGA_brightness" {	
	bindsym XF86MonBrightnessUp exec xrandr --output VGA1 --brightness 1 # increase screen brightness
	bindsym XF86MonBrightnessDown exec xrandr --output VGA1 --brightness 0.5 # decrease screen brightness

	bindsym Escape mode "default"
}

#Novo Key
bindsym XF86Launch1 exec --no-startup-id amixer -D pulse set Master 1+ toggle && pkill -RTMIN+1 i3blocks 

mode "Power" {
	bindsym h exec "systemctl hibernate; /home/addison/cooli3lock.sh"; mode "default"
	bindsym XF86Sleep exec "systemctl suspend; /home/addison/cooli3lock.sh; sudo blackwidowcontrol -i"; mode "default"
	bindsym s exec "shutdown -h now"
	bindsym r exec "shutdown -r now"
	bindsym Escape mode "default"
}

bindsym XF86Sleep mode "Power"

