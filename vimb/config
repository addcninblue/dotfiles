nnoremap ; :
nnoremap : ;
nnoremap b :open !
nnoremap B :tabopen !
nnoremap O :tabopen 
nnoremap d :quit<CR>
set statusbar=false
shortcut-default go
shortcut-add go=https://www.google.com/search?q=$0
shortcut-add wi=http://en.wikipedia.org/w/index.php?title=Special:Search&search=$0
shortcut-add di=http://dictionary.reference.com/browse/$0
shortcut-add conj=http://www.wordreference.com/conj/EsVerbs.aspx?v=$0
shortcut-add sp=http://www.wordreference.com/es/en/translation.asp?spen=$0
inoremap jk <Esc>
cnoremap jk <Esc>

set input-bg-normal=#002b36
set input-fg-normal=#eee8d5

set download-path = /home/addison/Downloads/
set editor-command = st -e vim %s
